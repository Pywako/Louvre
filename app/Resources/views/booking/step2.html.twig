{% extends "::layout.html.twig" %}

{% block breadcrumbs %}
    <nav>
        <div class="nav-wrapper light-blue">
            <div class="col s12">
                <a href="{{ path('homepage') }}" class="breadcrumb">Accueil</a>
                <a href="{{ path('step1') }}" class="breadcrumb">Commander</a>
                <a href="#" class="breadcrumb">Coordonnés</a>
            </div>
        </div>
    </nav>
{% endblock %}
{% block image %}
    <img src="{{ asset('images/pyramide2.jpg') }}" id="banniere">
{% endblock %}

{% block etape %}Coordonnées{% endblock %}
{% block contenu %}
    {{ form_start(form) }}
    {{ form_label(form.tickets) }}
        {{ form_errors(form) }}
        <ul>
            {% for ticketField in form.tickets %}
                <li>
                    {{ form_errors(ticketField) }}
                    {{ form_widget(ticketField) }}
                </li>
            {% endfor %}
        </ul>
    <div class="row center">
        {{ form_row(form.continuer, {'attr': {'class' : 'waves-effect waves-light btn amber accent-4'}}) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/datepickerBirth.js') }}"></script>
{% endblock %}