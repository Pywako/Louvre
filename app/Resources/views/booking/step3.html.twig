{% extends "::layout.html.twig" %}

{% block breadcrumbs %}
    <nav>
        <div class="nav-wrapper light-blue">
            <div class="col s12">
                <a href="{{ path('homepage') }}" class="breadcrumb">Accueil</a>
                <a href="{{ path('step1') }}" class="breadcrumb">Commander</a>
                <a href="{{ path('step2') }}" class="breadcrumb">Coordonnés</a>
                <a href="#" class="breadcrumb">Paiement</a>
            </div>
        </div>
    </nav>
{% endblock %}

{% block image %}
    <img src="" id="banniere">
{% endblock %}

{% block etape %}Paiement{% endblock %}
{% block contenu %}
    <div class="row">
        <div class="col s12">
            <div class="row center">
                <h2>Récapitulatif de la commande</h2>

                <div >
                    <p>Date de visite : {{ booking.dateVisit|date("d/m/Y") }}</p>
                    <p>Type de billet :
                        {% if booking.type == 1 %}
                            Billet journée
                        {% elseif booking.type == 2 %}
                            Billet Demi journée
                        {% endif %}
                    </p>
                </div>

                <table class="highlight centered responsive-table">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Tarif réduit</th>
                        <th>Prix</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if tickets %}
                        {% for ticket in tickets %}
                            <tr>
                                <td>{{ ticket.nom }}</td>
                                <td>{{ ticket.prenom }}</td>
                                <td>{% if ticket.reduit == true %}
                                        Oui
                                    {% elseif ticket.reduit == false %}
                                        Non
                                    {% endif %}
                                </td>
                                <td>{{ ticket.prix }} €</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="3"></td>
                        <td class="center">Nombre total de billet : {{ booking.nbTicket }}</td>

                    </tr>
                    <tr>
                        <td colspan="3"></td>
                        <td  class="center">Prix total : {{ total }} €</td>
                    </tr>
                    </tfoot>
                </table>
                <h2>Paiement</h2>
                <form action="" method="POST">
                    <script
                            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="{{ stripe_public_key }}"
                            data-amount="{{ total * 100 }}"
                            data-email ="{{ booking.email }}"
                            data-name="Paiment"
                            data-description="Billetterie du muséee du Louvre"
                            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                            data-locale="auto"
                            data-zip-code="false"
                            data-currency="eur">
                    </script>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
