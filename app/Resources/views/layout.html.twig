<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Réservation de billet pour le musée du Louvre (projet4)">

    <title>{% block title %}Musée du Louvre - Réservation{% endblock %}</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <!-- Imporation des styles et materialize dans twig-->
    {% block stylesheets %}
        <!--Import materialize.css-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <!-- Feuille de style -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}


</head>
<body>
    <div id="global">
        <!------------------------ Entête ------------------------>
        <header>
            <a href="{{ path('homepage') }}">
                <h1 class="header center light-blue-text">Musée du Louvre</h1>
            </a>

        </header>
        <!------------------------ Contenu ------------------------>
        <div class="container" id="contenu">
            <div class="row">
                {% block breadcrumbs %}
                {% endblock %}
            </div>
            <div class="">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-image">
                            {% block image %}
                            {% endblock %}
                            <span class="card-title">
                                {% block etape %}{% endblock %}
                            </span>
                            {% block bouton %}{% endblock %}
                        </div>
                        <div class="card-content">
                            {% block contenu %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!------------------------ Pied de page ------------------------>
        <footer class="page-footer light-blue darken-2">
            <div class="footer-copyright">
                <div class="container">
                    <p id="mentions">
                    @ 2017 <a href="{{ path('mentions') }}" class="white-text"> Mentions légales</a>
                    </p>
                </div>
            </div>
        </footer>
    </div>



    {% block javascripts %}
        <!--Import jQuery before materialize.js-->
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

        <script>
            $(document).ready(function() {
                $('select').material_select();
            });
        </script>
    {% endblock %}
</body>
</html>